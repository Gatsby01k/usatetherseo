---
const {
  title,
  description,
  canonical,
  ogType,
  ogImage,
  ogTitle,
  ogDescription,
  twitterCard
} = Astro.props;

const siteTitle = title ? `${title} | usatether.io` : "usatether.io";
const siteDesc =
  description ??
  "Independent educational resource about stablecoins (USAT/USDT/USDC). Not affiliated with Tether.";

const canonicalUrl = canonical ?? Astro.url.href;

const finalOgType = ogType ?? "website";
const finalOgTitle = ogTitle ?? siteTitle;
const finalOgDesc = ogDescription ?? siteDesc;
const finalOgImage = ogImage ?? null;

const finalTwitterCard = twitterCard ?? (finalOgImage ? "summary_large_image" : "summary");
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteTitle}</title>
    <meta name="description" content={siteDesc} />

    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <link rel="canonical" href={canonicalUrl} />

    <meta property="og:type" content={finalOgType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={finalOgTitle} />
    <meta property="og:description" content={finalOgDesc} />
    {finalOgImage && <meta property="og:image" content={finalOgImage} />}

    <meta name="twitter:card" content={finalTwitterCard} />
    <meta name="twitter:title" content={finalOgTitle} />
    <meta name="twitter:description" content={finalOgDesc} />
    {finalOgImage && <meta name="twitter:image" content={finalOgImage} />}

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DEKZLM0V79"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-DEKZLM0V79', { anonymize_ip: true });
    </script>

    <slot name="head" />
  </head>

  <body>
    <header class="site-header">
      <div class="container">
        <a class="brand" href="/">usatether.io</a>
        <nav class="nav">
          <a href="/about">About</a>
          <a href="/blog">Blog</a>
          <a href="/disclaimer">Disclaimer</a>
          <a href="/privacy-policy">Privacy</a>
          <a href="/contact">Contact</a>
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <p class="muted">
          Independent educational resource. Not affiliated with Tether. Content is informational only; not financial advice.
        </p>
      </div>
    </footer>
  </body>
</html>
