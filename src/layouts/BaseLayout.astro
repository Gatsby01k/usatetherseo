---
const { title, description } = Astro.props;
const siteTitle = title ? `${title} | usatether.io` : 'usatether.io';
const siteDesc = description ?? 'Independent educational resource about stablecoins (USAT/USDT/USDC). Not affiliated with Tether.';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteTitle}</title>
    <meta name="description" content={siteDesc} />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDesc} />
    <meta property="og:type" content="website" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DEKZLM0V79"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-DEKZLM0V79', {
        anonymize_ip: true
      });
    </script>

  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <a class="brand" href="/">usatether.io</a>
        <nav class="nav">
          <a href="/about">About</a>
          <a href="/blog">Blog</a>
          <a href="/disclaimer">Disclaimer</a>
          <a href="/privacy-policy">Privacy</a>
          <a href="/contact">Contact</a>
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <p class="muted">
          Independent educational resource. Not affiliated with Tether. Content is informational only; not financial advice.
        </p>
      </div>
    </footer>
  </body>
</html>
